<div class="container">
  <% if flash[:danger].present? %>
    <% flash.each do |name, msgs| %>
      <div style="margin-top:20px" class="alert alert-<%= name %>" role="alert">
        <% msgs.each do |msg| %>
          <%= msg %><br />
        <% end %>
      </div>
    <% end %>
  <% end %>
  <div style="margin: auto; padding-top:100px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">Upload Document</h3>
      </div>     
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        <%= form_with url: documents_path, local: true, class: "form-horizontal" do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: "file title" %>
          </div>
    
          <div class="form-group">
            <%= f.text_area :description, class: "form-control", placeholder: "description" %>
          </div>
        
          <div class="form-group">
            <%= f.file_field :document, direct_upload: true, accept: 'application/pdf',  class: "form-control" %>
          </div>
        
          <div class="form-group text-right">
            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
            <div style="padding:0;" class="col-sm-12 controls">
              <%= link_to "Cancel", documents_path, class: "btn btn-outline-secondary" %> 
              <%= f.submit "Upload", class: "btn btn-outline-success", data: { disable_with: 'Uploading...' } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>