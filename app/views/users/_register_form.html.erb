<div class="container">
  <% if flash[:danger].present? %>
    <% flash.each do |name, msgs| %>
      <div class="alert alert-<%= name %>" role="alert">
        <% msgs.each do |msg| %>
          <%= msg %>,&nbsp;
        <% end %>
      </div>
    <% end %>
  <% end %>
  <div style="margin: auto; padding-top:100px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="text-center">Register</h3>
      </div>     
      <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        <%= form_with url: create_path, local: true, class: "form-horizontal" do |f| %>
          <div style="margin-bottom: 25px" class="input-group">
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>
      
          <div style="margin-bottom: 25px" class="input-group">
            <%= f.password_field :password, class: "form-control", placeholder: "password" %>
          </div>
      
          <div style="margin-bottom: 25px" class="input-group">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "confirm password" %>
          </div>
      
          <div style="margin-top:25px; padding:0;" class="form-group">
            <div style="padding:0;" class="col-sm-12 controls">
              <%= f.submit "Register", class: "btn btn-success col-sm-12 col-md-offset-3" %>
            </div>
          </div>
          <div class="form-group">
              <div style="padding:0;" class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                  Already have an account! 
                  <%= link_to "Login Here", '/login' %>
                </div>
              </div>
            </div> 
        <% end %>
      </div>
    </div>
  </div>
</div>